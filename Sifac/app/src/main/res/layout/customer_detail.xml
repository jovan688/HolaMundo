<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"

    >

    <TextView
        android:id="@+id/txtviewcustomertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:text="Alexander Porta Arais"
        android:textColor="@color/colorPurple"
        android:background="@color/colorGrayLigth"
        />

    <TextView
        android:id="@+id/txtviewcustomerCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:text="001-000000-0000D"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGrayLigth"
        />

    <TextView
        android:id="@+id/txtcustomerAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matagalpa , Comarca El Paisa"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_place_purple_24dp"
        android:textColor="@color/colorGrayDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtcustomerdatetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/customer.detail.fecha_abono"
            android:drawableLeft="@drawable/ic_query_builder_purple_24dp"
            android:textColor="@color/colorGrayDark"
            />

        <TextView
            android:id="@+id/txtcustomerdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-05-2015"
            android:textStyle="bold"
            android:textColor="@color/colorGrayDark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtcustomercuotatitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/customer.detail.cuota"
            android:drawableLeft="@drawable/ic_monetization_on_purple_24dp"
            android:textColor="@color/colorGrayDark"
            />

        <TextView
            android:id="@+id/txtcustomercuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C$ 250"
            android:textStyle="bold"
            android:textColor="@color/colorGrayDark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtcustomersaldotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer.detail.saldo"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_monetization_on_purple_24dp"
            android:textColor="@color/colorGrayDark"
            />

        <TextView
            android:id="@+id/txtcustomersaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C$ 5,500"
            android:textStyle="bold"
            android:textColor="@color/colorGrayDark"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:paddingLeft="6dp"
        android:text="@string/customer.detail.detailtitle"
        android:background="@color/colorBackground"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abonar"
            android:id="@+id/btnabonar"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorPurple"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Noabonar"
            android:id="@+id/btnnoabonar"
            android:background="@color/colorPurple"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/White"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>